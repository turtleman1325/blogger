<h1>Categories</h1>
<table>
    <ul>
      <% @categories.each do |category| %>
      <tr><td><%= link_to category.name, category %></td>
       <td><%= link_to image_tag('http://pngwebicons.com/upload/recycle_bin_PNG9115.png', height: '30px'), category, method: :delete, data: { confirm: 'Are you sure?'} %>
      </td>
      <% end %>
    </ul>
  </table>
<%= link_to 'New Category', '/categories/new', method: :get%>


