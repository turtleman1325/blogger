<h1>Categories</h1>
<ul>
  <% @categories.each do |category| %>
  <li><%= link_to category.name, category %>
    <%= link_to image_tag('http://pngwebicons.com/upload/recycle_bin_PNG9115.png', height: '30px'), category, method: :delete, data: { confirm: 'Are you sure?'} %>
  </li>
  <% end %>
</ul>
<%= link_to 'New Category', '/categories/new', method: :get%>